<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RecycleTugasGuru.EditTugas_Guru"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/birulivin"

        android:orientation="horizontal"
        android:padding="16dp">

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            >

            <ImageView
                android:id="@+id/back_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/backlay" />

        </FrameLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/NamaKelasLayout"
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/white_background"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout">

        <TextView
            android:id="@+id/tv_nama_kelas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Kelas"
            android:textColor="@color/birulivin"
            android:textSize="20dp"
            android:textStyle="bold" />


    </LinearLayout>
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/LayoutBuatTugas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/white_background"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toTopOf="@+id/footerLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout">

        <TextView
            android:id="@+id/Textbuattugas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="Edit Tugas"
            android:textColor="@color/BiruBG"
            android:textSize="20dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/Edt_JudulTugas"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_white"
            android:drawableLeft="@drawable/judul"
            android:drawablePadding="10dp"
            android:hint="Judul Tugas"
            android:inputType="text"
            android:paddingStart="16dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/Edt_Lampiran"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_white"
            android:drawableLeft="@drawable/attachment_2"
            android:drawablePadding="10dp"
            android:hint="Tambahkan Lampiran"
            android:inputType="textPersonName"
            android:paddingStart="16dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/Edt_Tanggal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_white"
            android:drawableLeft="@drawable/tanggal"
            android:drawablePadding="10dp"
            android:hint="Atur Tanggal Dan Waktu"
            android:inputType="textPassword"
            android:paddingStart="16dp"
            android:textColor="#000000"
            android:textColorHint="#181818"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/Edt_Komentar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_white"
            android:drawableLeft="@drawable/comment"
            android:drawablePadding="10dp"
            android:hint="Tambahkan Komentar"
            android:inputType="textEmailAddress"
            android:paddingStart="16dp"
            android:textColor="#000000"
            android:textColorHint="#181818"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_simpanTugas"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/birulivin"
            android:text="Simpan"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" />


    </LinearLayout>

</LinearLayout>