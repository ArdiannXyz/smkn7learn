<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RecycleBankTugas.BehindBankTugas_Guru"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/birulivin"

        android:orientation="horizontal"
        android:padding="16dp">

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            >

            <ImageView
                android:id="@+id/back_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/backlay" />

        </FrameLayout>


    </LinearLayout>


    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/LayoutBuatTugas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/white_background"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toTopOf="@+id/footerLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout">

        <LinearLayout
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:gravity="center_vertical"
            android:layout_width="270dp"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:padding="5dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_personline"
                />

            <TextView
                android:id="@+id/txtnama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moh Farhan"
                android:textSize="13sp"
                android:layout_marginLeft="10dp"
                android:paddingBottom="5dp"
                android:textColor="@color/birulivin"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtstatus"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="Belum
                dinilai"
                android:textColor="@color/birulivin"
                android:textSize="15dp"
                android:textStyle="bold" />


        </LinearLayout>

        <EditText
            android:id="@+id/Edt_Lampiran"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_white"
            android:drawableLeft="@drawable/attachment"
            android:drawablePadding="10dp"
            android:hint="Tambahkan Lampiran"
            android:inputType="textPersonName"
            android:paddingStart="16dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/Edt_tambahNilai"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_white"
            android:drawableLeft="@drawable/nilai"
            android:drawablePadding="15dp"
            android:hint="Tambahkan Nilai "
            android:inputType="textEmailAddress"
            android:paddingStart="16dp"
            android:textColor="#000000"
            android:textColorHint="#181818"
            android:textSize="15sp" />


        <Button
            android:id="@+id/Btn_berikanNilai"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/birulivin"
            android:text="Berikan Nilai"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" />



    </LinearLayout>

</LinearLayout>